@model GCD0704.AppDev.ViewModels.TodoCategoriesViewModel
@{
	ViewBag.Title = "Edit";
}

<h2>Edit the task</h2>

@using (@Html.BeginForm("Edit", "Todos", "POST"))
{
	@Html.ValidationSummary(false, "", new { @class = "text-danger" })

	<div class="form-group">
		@Html.HiddenFor(model => model.Todo.Id)
		@Html.LabelFor(model => model.Todo.Name)
		@Html.TextBoxFor(model => model.Todo.Name, new { @class = "form-control" })
		@Html.ValidationMessageFor(model => model.Todo.Name, "", new { @class = "text-danger" })
	</div>
	<div class="form-group">
		@Html.LabelFor(model => model.Todo.Description)
		@Html.TextAreaFor(model => model.Todo.Description, new { @class = "form-control" })
		@Html.ValidationMessageFor(model => model.Todo.Description, "", new { @class = "text-danger " })
	</div>
	<div class="form-group">
		@Html.LabelFor(model => model.Todo.CategoryId)
		@Html.DropDownListFor(model => model.Todo.CategoryId,
			new SelectList(Model.Categories, "Id", "Name"),
			new { @class = "form-control" })
		@Html.ValidationMessageFor(model => model.Todo.CategoryId, "", new { @class = "text-danger " })
	</div>
	<div class="form-group">
		@Html.LabelFor(model => model.Todo.DueDate)
		@Html.TextBoxFor(model => model.Todo.DueDate, 
		 new { @class = "form-control", @type = "date", @Value = Model.Todo.DueDate.ToString("yyyy-MM-dd") })
		@Html.ValidationMessageFor(model => model.Todo.DueDate, "", new { @class = "text-danger" })
	</div>
	<div class="form-group">
		<button type="submit" class="btn btn-primary">Update Task</button>
	</div>
}

